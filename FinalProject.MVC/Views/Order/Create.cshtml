@model FinalProject.MVC.ViewModels.SimplifiedOrderViewModel

@{
    ViewData["Title"] = "Create New Order";
}

<div class="container">
    <h1 class="mt-4">Create New Order</h1>
    <p>Select a dealer, a car model, and specify the quantity (1-5).</p>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="DealerId" class="form-label"></label>
                            <select asp-for="DealerId" class="form-select" asp-items="ViewBag.Dealers">
                                <option value="">-- Select a Dealer --</option>
                            </select>
                            <span asp-validation-for="DealerId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CarId" class="form-label"></label>
                            <select asp-for="CarId" class="form-select" asp-items="ViewBag.Cars">
                                <option value="">-- Select a Car --</option>
                            </select>
                            <span asp-validation-for="CarId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" type="number" class="form-control" min="1" max="5" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Note" class="form-label"></label>
                            <textarea asp-for="Note" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Place Order</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <p>Your order will be created for the selected quantity of the same car model from the chosen dealer.</p>
                    <p class="text-muted">After placing your order, our sales team will contact you to finalize the purchase process. If stock is unavailable, your order will be placed in a pending state.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}