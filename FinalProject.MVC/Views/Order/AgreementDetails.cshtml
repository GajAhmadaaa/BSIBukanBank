@model FinalProject.BL.DTO.SalesAgreementViewDTO

@{
    ViewData["Title"] = "Agreement Details";
}

<div class="container">
    <h1 class="mt-4">Agreement Details</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Agreement #@Model.Id</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Agreement Information</h6>
                    <dl class="row">
                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.TransactionDate.ToString("dd MMM yyyy HH:mm")</dd>
                        
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @{
                                string statusClass = Model.Status?.ToLower() switch
                                {
                                    "pending" => "bg-warning",
                                    "readyforagreement" => "bg-primary",
                                    "unpaid" => "bg-danger",
                                    "paid" => "bg-success",
                                    "converted" => "bg-info",
                                    "completed" => "bg-success-subtle text-success", // Light green for completed
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusClass">@(Model.Status ?? "Unknown")</span>
                        </dd>
                        
                        @if (Model.TotalAmount.HasValue)
                        {
                            <dt class="col-sm-4">Total Amount</dt>
                            <dd class="col-sm-8">Rp @Model.TotalAmount.Value.ToString("N0")</dd>
                        }
                    </dl>
                </div>
                
                <div class="col-md-6">
                    <h6>Customer Information</h6>
                    <dl class="row">
                        <dt class="col-sm-4">Customer ID</dt>
                        <dd class="col-sm-8">@Model.CustomerId</dd>
                        
                        <dt class="col-sm-4">Sales Person ID</dt>
                        <dd class="col-sm-8">@Model.SalesPersonId</dd>
                        
                        <dt class="col-sm-4">Dealer ID</dt>
                        <dd class="col-sm-8">@Model.DealerId</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Agreement Items</h5>
        </div>
        <div class="card-body">
            @if (Model.Details.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Car Model</th>
                                <th class="text-end">Price</th>
                                <th class="text-end">Discount</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                decimal totalAmount = 0;
                            }
                            @foreach (var detail in Model.Details)
                            {
                                var itemTotal = detail.AgreedPrice - (detail.Discount ?? 0);
                                totalAmount += itemTotal;
                                <tr>
                                    <td>@detail.CarName</td>
                                    <td class="text-end">Rp @detail.AgreedPrice.ToString("N0")</td>
                                    <td class="text-end">Rp @(detail.Discount?.ToString("N0") ?? "0")</td>
                                    <td class="text-end">Rp @itemTotal.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Total Amount:</th>
                                <th class="text-end">Rp @totalAmount.ToString("N0")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No items found for this agreement.</p>
            }
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
    </div>
</div>