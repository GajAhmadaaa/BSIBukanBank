@model FinalProject.BO.Models.LetterOfIntent

@{
    ViewData["Title"] = "Order Details";
}

<div class="container">
    <h1 class="mt-4">Order Details</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Order #@Model.Loiid</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Order Information</h6>
                    <dl class="row">
                        <dt class="col-sm-4">Order Date</dt>
                        <dd class="col-sm-8">@Model.Loidate.ToString("dd MMM yyyy")</dd>
                        
                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">@Model.Customer?.Name</dd>
                        
                        <dt class="col-sm-4">Dealer</dt>
                        <dd class="col-sm-8">@Model.Dealer?.Name</dd>
                        
                        <dt class="col-sm-4">Sales Person</dt>
                        <dd class="col-sm-8">@Model.SalesPerson?.Name</dd>
                        
                        <dt class="col-sm-4">Payment Method</dt>
                        <dd class="col-sm-8">@Model.PaymentMethod</dd>
                        
                        @if (!string.IsNullOrEmpty(Model.Note))
                        {
                            <dt class="col-sm-4">Note</dt>
                            <dd class="col-sm-8">@Model.Note</dd>
                        }
                    </dl>
                </div>
                
                <div class="col-md-6">
                    <h6>Booking Information</h6>
                    @if (Model.Bookings.Any())
                    {
                        var booking = Model.Bookings.First();
                        <dl class="row">
                            <dt class="col-sm-4">Booking ID</dt>
                            <dd class="col-sm-8">@booking.BookingId</dd>
                            
                            <dt class="col-sm-4">Booking Date</dt>
                            <dd class="col-sm-8">@booking.BookingDate.ToString("dd MMM yyyy")</dd>
                            
                            <dt class="col-sm-4">Booking Fee</dt>
                                <dd class="col-sm-8">@string.Format("{0:C}", booking.BookingFee)</dd>
                            
                            <dt class="col-sm-4">Status</dt>
                            <dd class="col-sm-8">
                                @if (booking.Status == "Pending")
                                {
                                    <span class="badge bg-warning">@booking.Status</span>
                                }
                                else if (booking.Status == "Confirmed")
                                {
                                    <span class="badge bg-success">@booking.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@booking.Status</span>
                                }
                            </dd>
                        </dl>
                    }
                    else
                    {
                        <p>No booking information available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    @if (Model.LetterOfIntentDetails.Any())
    {
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Car Details</h5>
            </div>
            <div class="card-body">
                @foreach (var detail in Model.LetterOfIntentDetails)
                {
                    <div class="row">
                        <div class="col-md-4">
                            <img src="https://images.unsplash.com/photo-1542362567-b07e54358753?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" 
                                 alt="Car Image" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;">
                        </div>
                        <div class="col-md-8">
                            <h6>@detail.Car?.Model</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Car Type</dt>
                                <dd class="col-sm-8">@detail.Car?.CarType</dd>
                                
                                <dt class="col-sm-4">Agreed Price</dt>
                                <dd class="col-sm-8">@string.Format("{0:C}", detail.AgreedPrice)</dd>
                                
                                @if (detail.Discount > 0)
                                {
                                    <dt class="col-sm-4">Discount</dt>
                                    <dd class="col-sm-8">@string.Format("{0:C}", detail.Discount)</dd>
                                }
                                
                                @if (detail.DownPayment > 0)
                                {
                                    <dt class="col-sm-4">Down Payment</dt>
                                    <dd class="col-sm-8">@string.Format("{0:C}", detail.DownPayment)</dd>
                                }
                            </dl>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
    </div>
</div>