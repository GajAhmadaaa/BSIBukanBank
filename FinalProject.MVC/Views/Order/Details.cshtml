@model FinalProject.BL.DTO.LetterOfIntentViewDTO

@{
    ViewData["Title"] = "Order Details";
}

<div class="container">
    <h1 class="mt-4">Order Details</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Order #@Model.Id</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Order Information</h6>
                    <dl class="row">
                        <dt class="col-sm-4">Order Date</dt>
                        <dd class="col-sm-8">@Model.Loidate.ToString("dd MMM yyyy")</dd>
                        
                        @* Note: Customer, Dealer, SalesPerson navigation properties are not available in DTOs *@
                        
                        <dt class="col-sm-4">Payment Method</dt>
                        <dd class="col-sm-8">@Model.PaymentMethod</dd>
                        
                        @if (!string.IsNullOrEmpty(Model.Note))
                        {
                            <dt class="col-sm-4">Note</dt>
                            <dd class="col-sm-8">@Model.Note</dd>
                        }
                    </dl>
                </div>
                
                <div class="col-md-6">
                    <h6>Booking Information</h6>
                    @* Note: Bookings are not available in DTOs *@
                    <p>Booking information is not available in this view.</p>
                </div>
            </div>
        </div>
    </div>
    
    @* Note: LetterOfIntentDetails and Car information are not available in DTOs *@
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
    </div>
</div>