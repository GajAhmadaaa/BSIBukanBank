@{
    ViewData["Title"] = "Dealer Mitsubishi Terpercaya";
}

@if (User?.Identity?.IsAuthenticated == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Selamat datang kembali, @User.Identity.Name!</strong> Anda telah berhasil login.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Hero Section -->
<div class="jumbotron jumbotron-fluid bg-primary text-white" style="border-radius: 12px; background: linear-gradient(135deg, #007bff, #0056b3);">
    <div class="container py-5 mx-4">
        <div class="row">
            <div class="col-lg-6 d-flex flex-column justify-content-center">
                <h1 class="display-4 fw-bold">Selamat Datang di Karolin</h1>
                <p class="lead">Temukan mobil Mitsubishi impian Anda dengan penawaran terbaik dan layanan berkualitas tinggi.</p>
                <div class="mt-4">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <a href="@Url.Action("Index", "Order")" class="btn btn-light btn-lg me-3">Order Mobil</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn btn-light btn-lg me-3">Order Mobil</a>
                    }
                    <a href="@Url.Action("Index", "TestDrive")" class="btn btn-outline-light btn-lg">Jadwal Test Drive</a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center">
                <img src="~/image/destinator.jpg" alt="Mobil Mitsubishi" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;">
            </div>
        </div>
    </div>
</div>

<!-- Services Section -->
<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold">Layanan Kami</h2>
        <p class="lead">Kami menyediakan berbagai layanan untuk memenuhi kebutuhan mobil Mitsubishi Anda</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                        <i class="bi bi-car-front fs-1 text-primary"></i>
                    </div>
                    <h5 class="card-title">Penjualan Mobil Mitsubishi</h5>
                    <p class="card-text">Berbagai pilihan mobil Mitsubishi baru dengan kualitas terjamin dan harga kompetitif.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                        <i class="bi bi-tools fs-1 text-success"></i>
                    </div>
                    <h5 class="card-title">Servis & Perbaikan</h5>
                    <p class="card-text">Layanan servis profesional dengan teknisi berpengalaman dan suku cadang asli Mitsubishi.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                        <i class="bi bi-speedometer2 fs-1 text-warning"></i>
                    </div>
                    <h5 class="card-title">Test Drive</h5>
                    <p class="card-text">Jadwalkan test drive untuk merasakan langsung kenyamanan dan performa mobil Mitsubishi pilihan Anda.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Cars Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Mobil Pilihan</h2>
            <p class="lead">Temukan mobil impian Anda dari Mitsubishi</p>
        </div>

        <div class="row g-4">
            <!-- Mitsubishi Xpander -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="~/image/xpander.jpg" 
                         class="card-img-top" alt="Mitsubishi Xpander" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Mitsubishi Xpander</h5>
                        <p class="card-text flex-grow-1">MPV keluarga dengan kapasitas 7 penumpang dan fitur lengkap.</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h5 text-primary mb-0">Rp 250.000.000</span>
                            <a href="#" class="btn btn-outline-primary">Detail</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mitsubishi Pajero Sport -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="~/image/pajero_sport.jpg" 
                         class="card-img-top" alt="Mitsubishi Pajero Sport" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Mitsubishi Pajero Sport</h5>
                        <p class="card-text flex-grow-1">SUV tangguh dengan performa off-road yang handal.</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h5 text-primary mb-0">Rp 400.000.000</span>
                            <a href="#" class="btn btn-outline-primary">Detail</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mitsubishi Mirage -->
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="~/image/mirage.jpg" 
                         class="card-img-top" alt="Mitsubishi Mirage" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Mitsubishi Mirage</h5>
                        <p class="card-text flex-grow-1">Hatchback hemat bahan bakar dengan desain modern.</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h5 text-primary mb-0">Rp 150.000.000</span>
                            <a href="#" class="btn btn-outline-primary">Detail</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <a href="@Url.Action("Create", "Order")" class="btn btn-primary btn-lg">Lihat Semua Mobil</a>
        </div>
    </div>
</div>

<!-- Testimonial Section -->
